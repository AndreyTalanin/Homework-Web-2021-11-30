###############################################################################
# Watched files
###############################################################################
[*.md]
[*.html]
[*.css]
[*.js]
[*.jsx]
[*.ts]
[*.tsx]
[*.json]

###############################################################################
# Core EditorConfig Options - Encoding
###############################################################################
charset = utf-8

###############################################################################
# Core EditorConfig Options - Indentation and spacing
###############################################################################
indent_size = 2
indent_style = space
tab_width = 2

###############################################################################
# Core EditorConfig Options - New line preferences
###############################################################################
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
